<div class="bg-white shadow rounded-lg p-6 max-w-md mx-auto">
  <% if notice %>
    <p class="text-green-600 font-medium mb-4"><%= notice %></p>
  <% end %>
  <!-- Imagen -->
  <div class="mb-4">
    <%# <strong class="font-semibold block mb-2">Imagen:</strong> %>
    <% if @detection.image.attached? %>
      <%= image_tag @detection.image, class: "border rounded shadow-sm max-w-full h-auto w-full" %>
    <% else %>
      <span class="text-gray-500">No image attached</span>
    <% end %>
  </div>
  <!-- Blanco biológico -->
  <p class="mb-2">
    <strong class="font-semibold">Blanco biológico:</strong>
    <span class="text-gray-700"><%= @detection.plague %></span>
  </p>
  <!-- Severidad -->
  <p class="mb-4">
    <strong class="font-semibold">Severidad:</strong>
    <span class="text-gray-700 capitalize"><%= @detection.severity %></span>
  </p>
  <!-- Acciones -->
  <div class="flex justify-between items-center mt-4">
    <div class="flex space-x-4">
      <%= link_to "Nueva", new_detection_path, class: "text-indigo-600 hover:text-indigo-800 font-medium" %>
      <%= link_to "Regresar", detections_path, class: "text-indigo-600 hover:text-indigo-800 font-medium" %>
    </div>
    <%= button_to "Eliminar", @detection, method: :delete, class: "inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-red-600 hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500" %>
  </div>
</div>
