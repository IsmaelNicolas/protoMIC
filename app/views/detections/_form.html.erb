<%= form_with(model: detection, local: true, class: "space-y-6 w-full") do |form| %>
  <% if detection.errors.any? %>
    <div id="error_explanation" class="bg-red-100 border-l-4 border-red-500 text-red-700 p-4">
      <h2 class="font-bold"><%= pluralize(detection.errors.count, "error") %> prohibited this detection from being saved:</h2>
      <ul class="mt-2">
        <% detection.errors.full_messages.each do |message| %>
          <li class="text-sm"><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <!-- Image Field -->
  <div class="field">
    <%= form.label :image,"Imagen", class: "block text-sm font-medium text-gray-700" %>
    <%= form.file_field :image, class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
  </div>
  <!-- Submit Button -->
  <div class="actions">
    <%= form.submit "Guardar", class: "w-full inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 sm:w-auto" %>
  </div>
<% end %>
